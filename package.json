{
  "name": "Code-Quality-Navigator-Extensions",
  "displayName": "vscode-sonar-scanner-extension",
  "description": "It is an extension that provides the ability to analyze projects created by the code quality navigator WebIDE service.",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:selectPathByEfs",
    "onCommand:extension.scanCode",
    "onCommand:extension.selectLanguage"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeQualityNavigation",
          "title": "Code Quality Navigation",
          "icon": "public/next.svg"
        }
      ]
    },
    "views": {
      "codeQualityNavigation": [
        {
          "id": "selectPathByEfs",
          "name": "Select Path",
          "when": "workspaceHasPackageJSON",
          "icon": "media/next.svg",
          "contextualTitle": "Select path for analysis" 
        },
        {
          "id": "selectLanguage",
          "name": "Select Language",
          "when": "workspaceHasPackageJSON",
          "icon": "media/next.svg",
          "contextualTitle": "Choose analysis language"
        },
        {
          "id": "scanCode",
          "name": "Scan Code",
          "contextualTitle": "Click to start analysis"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.scanCode",
        "title": "Scan Code"
      },
      {
        "command": "extension.selectLanguage",
        "title": "Select Language"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
